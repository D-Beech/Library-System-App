<UserControl x:Class="FinalProject.BookTitleClickable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinalProject"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <Button Style="{StaticResource InvisibleBtn}" HorizontalAlignment="Left" Margin="30,0,0,0" Click="Button_Click">
            <TextBlock Name ="NameBox" FontSize="25" Foreground="White">Book Title</TextBlock>
        </Button>
       
    </Grid>
</UserControl>
