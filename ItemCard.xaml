<UserControl x:Class="FinalProject.ItemCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProject"
        mc:Ignorable="d"
               d:DesignHeight="350" d:DesignWidth="200" Margin="15">
    
    <Border Name="CardBorder" Background="White" CornerRadius="5" BorderBrush="Transparent" BorderThickness="5" MinHeight="350" MinWidth="200" >
        <Border.Effect>
            <DropShadowEffect ShadowDepth="1" BlurRadius="5"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0">
                <Image Name="ImageBox" Margin="3,3">
                    
                </Image>
            </StackPanel>



            <TextBlock Name ="ItemTitle" Grid.Row="1" TextAlignment="Center" Text="Title" FontSize="18" Foreground="Black" />
            <TextBlock Name ="ItemAuthor" Grid.Row="2" TextAlignment="Center" Text="Author" FontSize="12" VerticalAlignment="Top"  Foreground="Black"/>

            <TextBlock Name ="ItemAvailable" Grid.Row="3" TextAlignment="Center" Text="Available" Foreground="ForestGreen" FontSize="20"  Margin="0,3,0,0"/>

            <Button Name ="ItemCardBtn" Style="{StaticResource TransparentBtn}" Grid.RowSpan="4" Click="Button_Click" MouseEnter="Make_Border_Visible"  MouseLeave="Make_Border_Transparent"  />
        </Grid>
    </Border>
</UserControl>
