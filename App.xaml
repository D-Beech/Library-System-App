<Application x:Class="FinalProject.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FinalProject"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <FontFamily x:Key="Metrophobic">D:\Users\270298599\source\repos\DatuProgress\FinalProject\FinalProject\Metrophobic\Metrophobic-Regular.ttf</FontFamily>

        <Style x:Key="WindowStyle1" TargetType="{x:Type Window}">
            <Setter Property="Height" Value='864'/>
            <Setter Property="Width" Value='1536'/>
            <Setter Property="ResizeMode" Value="NoResize"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#678D58"/>
        </Style>

        <Style x:Key="WindowSizeContent" TargetType="{x:Type UserControl}">
            <Setter Property="Height" Value='800'/>
            <Setter Property="Width" Value='1500'/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#678D58"/>
        </Style>


        <Style x:Key="Minus25WindowSizeContent" TargetType="{x:Type UserControl}">
            <Setter Property="Height" Value='700'/>
            <Setter Property="Width" Value='1400'/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#678D58"/>
        </Style>

        <!--Rounded Text Box Style-->

        <Style x:Key="LoginBtnBorder" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="50"/>
        </Style>

        <Style x:Key="LoginTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#A3A3A3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="{StaticResource Metrophobic}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBoxBase}">
                        <Border 
          Name="Border"
          CornerRadius="0" 
          Padding="2"
          Background="Transparent"
          BorderBrush="Transparent"
          BorderThickness="1" >
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="Transparent"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>



                        </ControlTemplate.Triggers>


                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <!--Rounded Textbox Style-->

        <!--Rounded Button Style-->

        <Style x:Key="LoginBtn" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="25"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="50" BorderThickness="5" BorderBrush="Black">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>


                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="30"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>



                <EventTrigger RoutedEvent="Button.Click">
                    <EventTrigger.Actions>

                    </EventTrigger.Actions>
                </EventTrigger>

            </Style.Triggers>
        </Style>



        <!--Rounded Button Style-->

        <!--Invisible Button Style-->

        <Style x:Key="InvisibleBtn" TargetType="Button">
            <Setter Property="Background" Value="{Binding WindowStyle1.Background}"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="BorderThickness" Value="0"/>


            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="50" BorderThickness="0" BorderBrush="Transparent" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkGray" />
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>

               

                <EventTrigger RoutedEvent="Button.Click">
                    <EventTrigger.Actions>

                    </EventTrigger.Actions>
                </EventTrigger>

            </Style.Triggers>
        </Style>


        <Style x:Key="TransparentBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="BorderThickness" Value="0"/>


            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="50" BorderThickness="0" BorderBrush="Black" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderThickness" Value="5"/>

                    <Setter Property="Cursor" Value="Hand"/>
                    
                </Trigger>



                <EventTrigger RoutedEvent="Button.Click">
                    <EventTrigger.Actions>

                    </EventTrigger.Actions>
                </EventTrigger>

            </Style.Triggers>
        </Style>

        <!--Invisible Button Style-->

        <!--Invisible TextBlock Style-->
        <Style x:Key="InvisibleTextBlock" TargetType="TextBlock">
            <Setter Property="Background" Value="{Binding WindowStyle1.Background}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
        <!--Invisible TextBlock Style-->

        <!--ListBox Template Starts!!!-->







        <!--ListBox Template Starts!!!-->



    </Application.Resources>
</Application>
