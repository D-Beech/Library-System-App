<UserControl x:Class="FinalProject.AddCatalogItemScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProject"
        mc:Ignorable="d"
        Style="{StaticResource WindowSizeContent}">
    
    <Grid Name="theGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="*"/>
            <ColumnDefinition Width ="*"/>
            <ColumnDefinition Width ="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Border Grid.ColumnSpan="3" Background="#74D3AE">
            <Button Style="{StaticResource InvisibleBtn}" Click="Go_Back_Click" HorizontalAlignment="Left">
                <Image Source="D:\Users\270298599\source\repos\DatuPresentationFinal\FinalProject\FinalProject\Icons\Arrow_Icon.png"/>
            </Button>
        </Border>

        <TextBlock Style="{StaticResource InvisibleTextBlock}" Grid.Row="1" Grid.ColumnSpan="3" FontSize="70" HorizontalAlignment="Center" >Add New Catalog Item</TextBlock>

        <Border  Style="{StaticResource LoginBtnBorder}" Grid.Row="2" Grid.ColumnSpan="3" Margin="100,10,100,10" >
            <TextBox Name ="TitleBox" Tag ="Title" Style="{StaticResource LoginTextBox}" VerticalAlignment="Center" FontSize="20" KeyUp="Empty_Box" KeyDown="Text_Box_Entry"/>
        </Border>

        <Border    Style="{StaticResource LoginBtnBorder}" Grid.Row="3" Grid.ColumnSpan="3" Margin="100,10,100,10" >
            <TextBox Name ="AuthorFirstNameBox" Tag ="Author First Names" Style="{StaticResource LoginTextBox}" VerticalAlignment="Center" FontSize="20" KeyUp="Empty_Box" KeyDown="Text_Box_Entry"/>
        </Border>

      

        <Border  Style="{StaticResource LoginBtnBorder}" Grid.Row="4" Grid.ColumnSpan="3" Margin="100,10,100,10" >
            <TextBox Name ="AuthorLastNameBox" Tag ="Author Last Names" Style="{StaticResource LoginTextBox}" VerticalAlignment="Center" FontSize="20" KeyUp="Empty_Box" KeyDown="Text_Box_Entry"/>
        </Border>

        <Border Style="{StaticResource LoginBtnBorder}" Grid.Row="5" Grid.ColumnSpan="3" Margin="100,10,100,10" >
            <TextBox Name ="DescriptionBox"  Tag ="Description" Style="{StaticResource LoginTextBox}" VerticalAlignment="Center" FontSize="20" KeyUp="Empty_Box" KeyDown="Text_Box_Entry"/>
        </Border>

        <Border  Style="{StaticResource LoginBtnBorder}" Grid.Row="6" Grid.ColumnSpan="3" Margin="100,10,100,10" >
            <TextBox Name = "YearBox" Tag ="Year" Style="{StaticResource LoginTextBox}" VerticalAlignment="Center" FontSize="20" KeyUp="Empty_Box" KeyDown="Text_Box_Entry"/>
        </Border>

        <ListBox Name= "GenreBox" Grid.Row="7" Margin="100, 10,0, 10" SelectionChanged="Genre2Box_SelectionChanged" SelectionMode="Single"/>
        <ListBox Name= "Genre2Box" Grid.Row="7" Grid.Column="1" Margin="50, 10,50, 10"  SelectionChanged="Genre2Box_SelectionChanged" SelectionMode="Single"/>
        <ListBox Name="MediaBox" Grid.Row="7" Grid.Column="2"  Margin="0, 10, 100,10"  SelectionChanged="MediaBox_SelectionChanged" SelectionMode="Single"/>

        <Border Style="{StaticResource LoginBtnBorder}" Grid.Row="8" Grid.ColumnSpan="3" Margin="100,10,100,10" >
            <TextBox Name= "ImageBox" Tag ="Image File Path"  Style="{StaticResource LoginTextBox}" VerticalAlignment="Center" FontSize="20" KeyUp="Empty_Box" KeyDown="Text_Box_Entry"/>
        </Border>

            <Button Name ="Submit_Button" Style="{StaticResource LoginBtn}" Grid.Row="9" Grid.ColumnSpan="3" Margin="400,30,400,30" Click="Submit_Button_Click"  Content="Add Item To Catalog"/>


    </Grid>



</UserControl>
